      "default": 0
    },
    "run_chromosome_tsv": {
      "type": "integer",
      "default": 0
    },
    "run_genome_fasta": {
      "type": "integer",
      "default": 0
    },
    "run_geneset_embl": {
      "type": "integer",
      "default": 1
    },
    "run_geneset_fasta": {
      "type": "integer",
      "default": 1
    },
    "run_geneset_gff3": {
      "type": "integer",
      "default": 0
    },
    "run_geneset_gtf": {
      "type": "integer",
      "default": 0
    },
    "run_xref_tsv": {
      "type": "integer",
      "default": 1
    },
    "run_rnaseq_exists": {
      "type": "integer",
      "default": 1
    }
  }
}
